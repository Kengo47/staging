.row.mx-auto{style: "max-width: 700px;"}
  .col-md-6.mx-auto{style: "border: 1px solid pink;"}
    - if @user.avatar?
      = image_tag @user.avatar.thumb.url, class: "rounded-circle"
    - else
      = image_tag "no_image.png", class: "avatar rounded-circle"
  .col-md-6{style: "border: 1px solid red;"}
    %h5= @user.name
    .stats
      %strong#following
        = @user.following.count
      フォロー中
      %strong#followers
        = @user.followers.count
      フォロワー
    - if @user.id == current_user.id
      = link_to 'アカウント編集', edit_user_registration_path, class: "btn btn-outline-dark mt-5"
    - else
      = render partial: 'follow_form', locals: { user: @user }

%ul.nav.nav-tabs.justify-content-center
  %li.nav-item
    %a{ href: '#tab1', class: 'nav-link active', 'data-toggle' => 'tab' }
      あなたの投稿
  %li.nav-item
    %a{ href: '#tab2', class: 'nav-link', 'data-toggle' => 'tab' }
      あなたのいいね
  %li.nav-item
    %a{ href: '#tab3', class: 'nav-link', 'data-toggle' => 'tab' }
      フォロー
  %li.nav-item
    %a{ href: '#tab4', class: 'nav-link', 'data-toggle' => 'tab' }
      フォロワー

.tab-content
  #tab1.tab-pane.active
    .row
      = render partial: "posts/post", locals: { posts: @user_posts }
    = paginate @user_posts
  #tab2.tab-pane
    %h1 まだいいねしてないですね。
  #tab3.tab-pane
    - if @following_users.any?
      - @following_users.each do |u|
        %li
          = u.name
    - else
      %h1 誰かフォローしてみましょう。
      ユーザー検索フォーム or 一覧ページ
  #tab4.tab-pane
    - if @followers_users.any?
      - @followers_users.each do |u|
        %li
          = u.name
    - else
      %h1 まだ誰からもフォローされていないようです・・・。